<h2>プロフィール編集</h2>
<%= form_with model: @member do |f| %>
  <div>
    <%= f.label :image, "プロフィール写真" %>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label :name, "氏名" %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :department, "所属" %>
    <%= f.text_field :department %>
  </div>
  <div>
    <%= f.label :status, "ステータス" %>
    <%= f.text_field :status %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>